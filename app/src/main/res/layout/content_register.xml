<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_image"
            android:layout_marginTop="30dp"
            android:tint="@android:color/white"/>

        <EditText
            android:id="@+id/register_name"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8E24AA"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:hint="Name"/>

        <EditText
            android:id="@+id/register_emailId"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8E24AA"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:hint="Email"/>



        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="#8E24AA"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/register_primaryPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Primary Contact Number"
            android:background="#8E24AA"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/register_emergencyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Emergency Contact Number"
            android:background="#8E24AA"
            android:drawableLeft="@drawable/ic_announcement_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="10dp"/>

        <Button
            android:id="@+id/register_button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="#9575CD"
            android:text="Sign Up"/>


    </LinearLayout>



</RelativeLayout>
