<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sdj.sherlockmc.UpdateProfile"
    tools:showIn="@layout/activity_update_profile">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_app"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/textView_updatelabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose Fields to be updated:"
            android:textAlignment="center"
            android:textSize="10sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/checkBox_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView_checkboxpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password"
            android:textAlignment="center"
            android:textSize="10sp" />
        <CheckBox
            android:id="@+id/checkBox_primaryphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView_checkboxprimaryphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Primary Phone"
            android:textAlignment="center"
            android:textSize="10sp" />
        <CheckBox
            android:id="@+id/checkBox_emergencyphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView_checkboxemergencyphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Emergency Phone"
            android:textAlignment="center"
            android:textSize="10sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView_oldpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Old Password:"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/update_oldpassword"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Enter Old Password"
                android:inputType="textPassword"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView_newpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Password:"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/update_newpassword"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView_updateprimaryphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Primary Phone:"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/update_primaryphone"
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Enter Primary Phone"
                android:inputType="phone"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView_updateemergencyphone"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Emergency Phone:"
                android:textAlignment="center"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/update_emergencyPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Enter Emergency Phone"
                android:inputType="phone"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:text="Update"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>